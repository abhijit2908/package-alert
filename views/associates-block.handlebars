<div class="container">
	<div class="container">
    <div class="jumbotron">
      <h1 class='text-center'>Welcome to Package Alert!</h1>
    </div>
	<h1> Hello Associate!</h1>
	<table class="table table-striped">

		<tr>
			<th>Resident name</th>
			<th>Building Number</th>
			<th>Created By:</th>
			<th>Created Date:</th>
			<th></th>
			<th></th>
		</tr>

		<tbody>

			{{#each dbPackage}}
			<tr>

					<td>{{this.User.name}}</td>
					<td>{{this.User.UserInfo.number}}</td>
					<td>{{this.updater}}</td>
					<td>{{this.createdAt}}</td>
					<td><button data-id="{{this.id}}" id= "pickedUp" class="pickedUp btn btn-success">Picked Up</button></td></td>
					<td><button data-id="{{this.id}}" id= "sendEmail" class="pickedUp btn btn-success">Send Email</button></td></td>
			</tr>
			{{/each}}

		</tbody>

	</table>


    <div id='login'>
      <button type="button" data-toggle="modal" data-target="#create-modal" class="btn btn-success center-block">Create New Package</button>
    </div>


	<div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
	      <div class="modal-dialog">
	        <div class="loginmodal-container">
	          <h1 class='text-center'>New Package</h1><br>
	          <form class='text-center' method="post" action="/api/create" id="createForm">
	          <input type="text" name="packageName" placeholder="Package Name">
	          <input type="text" name="Rid" placeholder="Resident ID">
	          <input type="submit" name="create" class=" loginmodal-submit" value="Create">
	          </form>
	        </div>
	      </div>
	</div>
	<a id="logout" class="btn" href="/signout">logout</a>
</div>